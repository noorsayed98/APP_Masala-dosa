<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/dosa"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="24dp"
        android:textColor="#669326"
        android:textStyle="bold"
        android:text="Sasta Masala dosa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp">

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="5"
            android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BA5B1D"
                android:text="(5.0)"
                /></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BA5B1D"
        android:text="Rs. 50/-"
        android:textStyle="bold"
        android:paddingStart="8dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Add to cart"
            android:backgroundTint="#557A20"
            android:layout_height="wrap_content"></Button>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BA5B1D"
            android:layout_weight="1"
            android:text="Buy now"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#669326"
            android:text="Description"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="5dp"
             android:textColor="#BA5B1D"
             android:text="Very tasty dosa you will love the taste and enjoy the chutney with parents and many more hahaha."/>
    </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#669326"
            android:text="Provided to you by"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/noor"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#689E1C"
            android:text="Your Savage seller"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="1"
            android:layout_marginLeft="5dp"
            android:rating="1"

            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BA5B1D"
            android:text="(5.0)"
            /></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BA5B1D"
                android:text="Noor the greatest of all time"
                />
        </LinearLayout>

    </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="Email seller"
            android:layout_marginRight="5dp"
            android:backgroundTint="#557A20"
            android:layout_height="wrap_content"/>



</LinearLayout>